{
  "name": "clubhouse-backend",
  "version": "1.0.0",
  "description": "Node.js back-end for for Full-stack software development project course",
  "repository": "https://github.com/alehuo/clubhouse-backend.git",
  "author": "alehuo",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=9.10.0",
    "yarn": ">=1.6.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "nodemon start",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "test": "nyc mocha test/**/*.test.ts --exit --timeout 10000",
    "test-docker": "docker exec -it clubhouse-backend yarn test",
    "view-coverage": "serve coverage -s",
    "create-databases": "ts-node src/scripts/create-databases.ts",
    "migrate": "knex migrate:latest",
    "migrate-docker": "docker exec -it clubhouse-backend yarn migrate",
    "seed": "knex seed:run",
    "seed-docker": "docker exec -it clubhouse-backend yarn seed",
    "rollback": "knex migrate:rollback",
    "rollback-docker": "docker exec -it clubhouse-backend yarn rollback",
    "build": "tsc",
    "heroku-postbuild": "yarn migrate"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.11.1",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.1",
    "@types/mocha": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.15",
    "@types/nodemailer": "^4.6.2",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^9.4.4",
    "@types/winston": "^2.4.4",
    "@types/ws": "^6.0.1",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.10.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.9",
    "nyc": "^13.0.1",
    "prettier": "^1.15.3",
    "serve": "^10.1.1",
    "tslint": "^5.9.1"
  },
  "dependencies": {
    "@alehuo/clubhouse-shared": "https://github.com/alehuo/clubhouse-shared.git",
    "axios": "^0.18.0",
    "bcrypt": "3.0.2",
    "chai-http": "^4.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "helmet": "^3.15.0",
    "jsonwebtoken": "8.4.0",
    "knex": "^0.15.2",
    "moment": "^2.23.0",
    "mysql2": "^1.5.3",
    "nodemailer": "^4.7.0",
    "ts-node": "^7.0.0",
    "typescript": "3.2.2",
    "uuid": "^3.3.2",
    "validator": "^10.9.0",
    "winston": "^3.1.0",
    "ws": "^6.1.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "dist/**/*.js",
      "migrations/**/*.js",
      "migrations/**/*.ts",
      "seeds/**/*.js",
      "seeds/**/*.ts",
      "coverage/**/*.js",
      "src/scripts/**/*.ts",
      "src/scripts/**/*.js",
      "knexfile.ts",
      "src/index.ts",
      "src/Database.ts",
      "src/WebSocket.ts",
      "src/utils/Mailer.ts"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "perFile": true,
    "all": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  }
}
