{
  "name": "clubhouse-backend",
  "version": "1.0.0",
  "description": "Node.js back-end for for Full-stack software development project course",
  "repository": "https://github.com/alehuo/clubhouse-backend.git",
  "author": "alehuo",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=9.10.0",
    "yarn": ">=1.6.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "nodemon start",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "nyc mocha -r ts-node/register test/**/*.test.ts --exit",
    "coverage": "nyc report --reporter=html --reporter=json mocha -r ts-node/register test/**/*.test.ts --exit",
    "view-coverage": "serve coverage -o",
    "create-databases": "ts-node src/scripts/create-databases.ts",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "build": "tsc",
    "heroku-postbuild": "yarn migrate"
  },
  "devDependencies": {
    "@types/bcrypt": "2.0.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/express": "^4.11.1",
    "@types/express-winston": "^2.4.0",
    "@types/helmet": "0.0.38",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/knex": "^0.14.14",
    "@types/mocha": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.1.3",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "dotenv": "^6.0.0",
    "eslint": "^5.2.0",
    "gulp": "^3.9.1",
    "husky": "^1.0.0-rc.13",
    "mocha": "^5.2.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "serve": "^9.4.0",
    "tslint": "^5.9.1"
  },
  "dependencies": {
    "apicache": "^1.2.1",
    "bcrypt": "3.0.0",
    "bluebird": "^3.5.1",
    "chai-http": "^4.0.0",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "helmet": "^3.12.1",
    "jsonwebtoken": "8.3.0",
    "knex": "^0.14.4",
    "moment": "^2.22.1",
    "mysql2": "^1.5.3",
    "sqlite3": "^4.0.0",
    "ts-node": "^7.0.0",
    "typescript": "^2.8.3",
    "winston": "^3.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "migrations/**/*.js",
      "seeds/**/*.js",
      "coverage/**/*.js",
      "**/*.js"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  }
}
