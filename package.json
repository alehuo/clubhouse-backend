{
  "name": "clubhouse-backend",
  "version": "1.0.0",
  "description": "Node.js back-end for for Full-stack software development project course",
  "repository": "https://github.com/alehuo/clubhouse-backend.git",
  "author": "alehuo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "watch": "nodemon start",
    "lint-ts": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "nyc mocha -r ts-node/register test/**/*.test.ts --exit",
    "coverage": "nyc report --reporter=html --reporter=json mocha -r ts-node/register test/**/*.test.ts --exit",
    "view-coverage": "node_modules/.bin/serve coverage -o"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/express": "^4.11.1",
    "@types/express-winston": "^2.4.0",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/knex": "^0.14.8",
    "@types/mocha": "^5.0.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.7",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "dotenv": "^5.0.1",
    "eslint": "^4.18.2",
    "gulp": "^3.9.1",
    "mocha": "^5.1.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.2",
    "nyc": "^11.7.1",
    "serve": "^6.5.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "apicache": "^1.2.1",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "chai-http": "^4.0.0",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "express-winston": "^2.5.0",
    "jsonwebtoken": "^8.2.0",
    "knex": "^0.14.4",
    "moment": "^2.22.1",
    "sqlite3": "^3.1.13",
    "winston": "^2.4.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*.ts",
      "migrations/**/*.js",
      "seeds/**/*.js",
      "coverage/**/*.js",
      "**/*.js"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
